{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Kingpigeon - gcc build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "/opt/AGL/bin/afb-daemon",
      "args": [
        "--name=afb-modbus_kingpigeon",
        "--port=1234",
        "--ldpaths=.",
        "--workdir=.",
        "--roothttp=.",
        "--token=",
        "--verbose",
        "--verbose",
        "--verbose",
        "--trap-faults=no"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/package",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Raymarine anemometer - gcc build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "/opt/AGL/bin/afb-daemon",
      "args": [
        "--name=afb-modbus_raymarine-anemometer",
        "--port=1234",
        "--ldpaths=.",
        "--workdir=.",
        "--roothttp=.",
        "--token=",
        "--verbose",
        "--verbose",
        "--verbose",
        "--trap-faults=no"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/package",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
